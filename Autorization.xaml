<Window x:Class="TSPP.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSPP"
        mc:Ignorable="d"
        Title="Autorization" Height="450" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="420">
        <Grid.Background>
            <ImageBrush ImageSource="Sharingan_Triple.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="AutorizationButton" Content="Войти" HorizontalAlignment="Center" Height="50" Margin="20,320,20,10" VerticalAlignment="Center" Width="200" Background="{x:Null}" BorderBrush="Red" Foreground="Black"/>
        <PasswordBox x:Name="PasswordField" Height="20" Margin="80,253,80,147" Width="140" Background="{x:Null}" BorderBrush="Red" Foreground="Red" SelectionBrush="#FFFF8C8C"/>
    </Grid>
</Window>
